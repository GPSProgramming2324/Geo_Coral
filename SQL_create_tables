-- Create the GeoCoral database
CREATE DATABASE IF NOT EXISTS GeoCoral;

-- Switch to the GeoCoral database
USE GeoCoral;

-- Create the Corals table
CREATE TABLE IF NOT EXISTS Corals (
    ID INT PRIMARY KEY,
    Geometry GEOMETRY NOT NULL
);

-- Create the Temperatures table
CREATE TABLE IF NOT EXISTS Temperatures (
    ID INT PRIMARY KEY,
    Coral_ID INT,
    Date DATE NOT NULL,
    Temperature FLOAT NOT NULL,
    FOREIGN KEY (Coral_ID) REFERENCES Corals(ID)
);
